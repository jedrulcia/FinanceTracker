<Window x:Class="FinanceTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Border Background="{StaticResource BrushSecondaryBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                    </Grid.RowDefinitions>

                    <!-- SELECT LIST MONTH -->
                    <Grid Grid.Row="0">
                        <ComboBox Height="40" Width="280" Background="{StaticResource BrushNeutral}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}"/>
                    </Grid>

                    <!-- SALARY CREATE BUTTON -->
                    <Grid Grid.Row="1">
                        <Button Content="NOWY" Height="40" Width="280" Background="{StaticResource BrushPositive}"></Button>
                    </Grid>

                    <!-- ONGOING EXPENSE CREATE BUTTON -->
                    <Grid Grid.Row="2">
                        <Button Content="NOWY" Height="40" Width="280" Background="{StaticResource BrushPositive}"></Button>
                    </Grid>

                    <!-- OTHER EXPENSE CREATE BUTTON -->
                    <Grid Grid.Row="3">
                        <Button Content="NOWY" Height="40" Width="280" Background="{StaticResource BrushPositive}"></Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- MONTHLY SUMMARY -->
        <Grid Grid.Row="1" Grid.Column="0">

        </Grid>

        <!-- YEARLY SUMMARY -->
        <Grid Grid.Row="2" Grid.Column="0">

        </Grid>

        <!-- SALARY -->
        <Grid Grid.Row="0" Grid.Column="1">

        </Grid>

        <!-- PIE CHART -->
        <Grid Grid.Row="1" Grid.Column="1">

        </Grid>

        <!-- BAR CHART -->
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">

        </Grid>

        <!-- ONGOING EXPENSES -->
        <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
            <Border Background="{StaticResource BrushSecondaryBackground}">
                <ListBox ItemsSource="{Binding OngoingExpensesVMs}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Value}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <!-- OTHER EXPENSES -->
        <Grid Grid.Row="0" Grid.Column="4">
            <Border Background="{StaticResource BrushSecondaryBackground}">
                <ListBox ItemsSource="{Binding OtherExpensesVMs}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Value}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <!-- OVERDUE PAYMENTS -->
        <Grid Grid.Row="1" Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border Background="{StaticResource BrushSecondaryBackground}">
                    <ListBox ItemsSource="{Binding OverdueOngoingExpensesVMs}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Value}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Border Background="{StaticResource BrushSecondaryBackground}">
                    <ListBox ItemsSource="{Binding OverdueOtherExpensesVMs}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Value}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
