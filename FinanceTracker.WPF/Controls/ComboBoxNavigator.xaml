<UserControl x:Class="FinanceTracker.WPF.Controls.ComboBoxNavigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceTracker.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <Grid Grid.Column="0">
            <ComboBox Height="40" Width="130" Background="{StaticResource BrushNeutral}" HorizontalAlignment="Center" VerticalAlignment="Center"
                      ItemsSource="{Binding Months}"
                      SelectedItem="{Binding SelectedMonth}"/>
        </Grid>

        <Grid Grid.Column="1">
            <Button Height="40" Width="130" Content="Otwórz" Background="{StaticResource BrushNeutral}" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{Binding SelectedMonth}"/>
        </Grid>
    </Grid>
</UserControl>
